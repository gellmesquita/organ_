<!DOCTYPE html>
<html lang="en">

    <%- include ("./partialPaciente/Header") %>

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->


    <!-- Topbar Start -->
  
    <!-- Topbar End -->


    <!-- Navbar Start -->
    <%- include ("./partialPaciente/Navbar") %>
    <!-- Navbar End -->


    <!-- Page Header Start -->
    <div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Especialidades</h1>
           
        </div>
    </div>



    <!-- Service Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                <p class="d-inline-block border rounded-pill py-1 px-4">Serviços</p>
                <h1>Nossas Especialidades</h1>
            </div>
            <div class="row g-4">
                <% especialidades.map(esp=> { %>
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="service-item bg-light rounded h-100 p-5">
                            <div class="d-inline-flex align-items-center justify-content-center bg-white rounded-circle mb-4" style="width: 65px; height: 65px;">
                                <i class="fa fa-heartbeat text-primary fs-4"></i>
                            </div>
                            <h4 class="mb-3"><%=esp.nomeEspecialidade %> </h4>
                            <p class="mb-4"><%=esp.descEspecialidade %>.</p>
                            <a class="btn" onclick="confirmar( `<%=esp.idEspecialidade%>`)"> <i class="fa fa-plus text-primary me-3"></i>Marcar consulta</a>
                        </div>
                    </div>
                 
                <%})%> 
                
             
            </div>
        </div>
    </div>
    <!-- Service End -->

    <%- include ("./partialPaciente/footer") %>
    <script>
        function confirmar(id){
          
      Swal.fire({
        title: 'Queres Agendar Esta Marcação?',
      icon:'warning',
        showCancelButton: true,
        confirmButtonColor:'#3085d6',
        cancelButtonColor:'#d33',
        confirmButtonText: 'Confirmar',
      
      }).then((result) => {
        /* Read more about isConfirmed, isDenied below   */
        if (result.isConfirmed) {
      
         window.location = '/criarmarcacao/'+id;
        } else if (result.isDenied) {
          Swal.fire('Erro ao eliminar', '', 'info')
        }
      })
        }
        </script>

    <% if(certo.length >0){%>
        <script>
         Swal.fire(
        'Boa!',
        '`<%=certo %>`!',
        'success'
      )
    
        </script>
        <% }else if(errado.length >0) {%>
          <script>
            Swal.fire({
    icon: 'error',
    title: 'Opa...',
    text: '`<%=errado %>`!',
    
    })
            
          </script>
          <% }%>
        

</body>

</html>